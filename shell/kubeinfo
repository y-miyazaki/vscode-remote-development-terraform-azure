#!/bin/bash
# ------------------------------------------------------------------------
# kubectl information
# ------------------------------------------------------------------------
set -e

NAMESPACE=${1:-default}

# node
echo "------------------------------------------------------------------------"
echo "Node"
echo "------------------------------------------------------------------------"
kubectl --namespace ${NAMESPACE} get no
echo -e "\n"

# ingrees
echo "------------------------------------------------------------------------"
echo "Ingress"
echo "------------------------------------------------------------------------"
kubectl --namespace ${NAMESPACE} get ingress
echo -e "\n"

# service
echo "------------------------------------------------------------------------"
echo "Service"
echo "------------------------------------------------------------------------"
kubectl --namespace ${NAMESPACE} get service
echo -e "\n"

# HorizontalPodAutoscaler
echo "------------------------------------------------------------------------"
echo "HorizontalPodAutoscaler"
echo "------------------------------------------------------------------------"
kubectl --namespace ${NAMESPACE} get hpa
echo -e "\n"

# Deployment
echo "------------------------------------------------------------------------"
echo "Deployment"
echo "------------------------------------------------------------------------"
kubectl --namespace ${NAMESPACE} get deployment
echo -e "\n"

echo "------------------------------------------------------------------------"
echo "Pod"
echo "------------------------------------------------------------------------"
# pod
kubectl --namespace ${NAMESPACE} get po --show-labels
echo -e "\n"

# ConfigMap
echo "------------------------------------------------------------------------"
echo "ConfigMap"
echo "------------------------------------------------------------------------"
kubectl --namespace ${NAMESPACE} get configMap
echo -e "\n"

# cronjob
echo "------------------------------------------------------------------------"
echo "Cronjob"
echo "------------------------------------------------------------------------"
kubectl --namespace ${NAMESPACE} get cronjob
echo -e "\n"
